        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dislocalblacklogo" />

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="414dp"
        android:layout_height="67dp"
        android:background="@color/white"
